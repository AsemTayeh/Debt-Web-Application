<div class="add-page">
    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h2 class="text-center">Create Debt Record</h2>
            <form action="/add-debt" method="POST">
                <div class="mb-3">
                    <label for="value" class="form-label">Value</label>
                    <input type="number" id="value" name="value" class="form-control bg-dark text-white" required>
                </div>
                
                <div class="mb-3">
                    <label for="note" class="form-label ">Note</label>
                    <textarea id="note" name="note" class="form-control bg-dark text-white" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Add Record</button>
            </form>
        </div>
    </div>
</div>
    
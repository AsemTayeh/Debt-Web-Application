<% if (locals.objArrayOneEl && locals.debtID) { %>
<div class="add-page">
    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h2 class="text-center">Update Debt Record</h2>
            <form action="/update-record" method="POST">
                <div class="mb-3">
                    <label for="value" class="form-label">New Value</label>
                    <input type="number" step="any" id="value" name="updAmount" value="<%=objArrayOneEl[0].amount%>" class="form-control bg-dark text-white" required>
                </div>
                
                <div class="mb-3">
                    <label for="note" class="form-label ">New Note</label>
                    <textarea id="note" name="updNote" class="form-control bg-dark text-white" rows="4" maxlength="255" required><%=objArrayOneEl[0].note%></textarea>
                </div>
                <input type="hidden" name="updID" value="<%= debtID %>">
                <button type="submit" class="btn btn-primary w-100">Update</button>
            </form>
        </div>
    </div>
</div>
<% } %>